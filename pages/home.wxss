/* pages/home.wxss */

.maincontainer{
  /* filter: blur(12px);*/
  margin-top: 30px;
}

.title{
  text-align: center;
  font-size: 2em;
  margin: 60px;
}

button{
  margin: 60px;
  margin-left: 100px;
  margin-right: 100px;
}

.newpaircontainer{
  position : absolute;
  width: 100%;
  height : 100%;
  bottom: 0px;
  top: 0px;
  z-index: 100;
  width: 100%;
}

.newpair{
  position: relative;
  margin: 50px;
  border-style:solid;
  border-radius: 12px;
  border-width: thin;
  height: calc(100% - 150px);
  box-sizing: border-box;
  background-color: rgba(250, 250, 250, 0.5);
}

.listtitle{
  text-align: center;
  margin: 12px;
  margin-top: 36px;
  font-size:large;
}

.locklist{
  margin: 36px;
  border-style:solid;
  border-radius: 12px;
  border-width: thin;
  max-height: calc(100% - 200px);
  overflow:auto;
}

button.blelist{
  margin: 0;
  border-radius: 0;
  border-bottom: thin solid;
  background-color: inherit;
}

button.blelist::after{
  border: none;
}

button.blelist:first-child{
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
}
button.blelist:last-child{
  border-bottom-style: none;
  border-bottom-left-radius: 12px;
  border-bottom-right-radius: 12px;
}

.pairbutton{
  bottom: 0px;
  position: absolute;
  width: calc(100% - 48px);
  margin: 24px;
}