.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-image: url("https://cdn.pixabay.com/photo/2019/12/13/20/56/miniature-4693868_1280.jpg");
  background-size: cover;
}

.title {
  font-size: 36px;
  color: #333;
  margin-bottom: 20px;
}

.pair-btn {
  width: 200px;
  height: 80px;
  background-color: #6478d1;
  color: #fff;
  font-size: 28px;
  border-radius: 5px;
  margin-bottom: 20px;
  opacity: 0.85;
}

.status {
  font-size: 24px;
  color: rgb(168, 14, 14);
}

.unlock-btn {
  width: 200px;
  height: 80px;
  background-color: #448aff;
  color: #fff;
  font-size: 28px;
  border-radius: 5px;
  margin-bottom: 20px;
  opacity: 0.8;
}

.unlock-status {
  font-size: 24px;
  color: rgb(240, 181, 208);
}

.button[disabled] {
  opacity: 0.5;
  cursor: default;
}

.find-car-btn {
  width: 200px;
  height: 80px;
  background-color: #f44336;
  color: #fff;
  font-size: 28px;
  border-radius: 5px;
  margin-bottom: 20px;
  opacity: 0.8;
}